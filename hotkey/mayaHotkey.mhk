//
// The runtime commands referenced by the hotkeys
//
runTimeCommand
	-label ""
	-annotation ""
	-longAnnotation ""
	-category "Custom Scripts"
	-image ""
	-tags ""
	-keywords ""
	-plugin ""
	-helpUrl ""
	-hotkeyCtx ""
	-commandLanguage "mel"
	-command ("string $current_panel = `getPanel -withFocus`;\nmodelEditor -e -dl flat $current_panel;")
	noLight;

runTimeCommand
	-label ""
	-annotation ""
	-longAnnotation ""
	-category "Custom Scripts"
	-image ""
	-tags ""
	-keywords ""
	-plugin ""
	-helpUrl ""
	-hotkeyCtx ""
	-commandLanguage "mel"
	-command ("$panel = `getPanel -withFocus`;\nif(`getPanel -typeOf $panel` == \"modelPanel\"){\n    modelEditor -e -xray (!`modelEditor -q -xray $panel`) $panel;\n}")
	xRay;

runTimeCommand
	-label ""
	-annotation ""
	-longAnnotation ""
	-category "Custom Scripts"
	-image ""
	-tags ""
	-keywords ""
	-plugin ""
	-helpUrl ""
	-hotkeyCtx ""
	-commandLanguage "mel"
	-command ("waitCursor -state on;\nstring $fileTextures[] = `ls -tex`;\nint $count=0;\nsource AEfileTemplate.mel;\nfor ($node in $fileTextures){\n    if (`attributeQuery -node $node -ex fileTextureName`){\n        AEfileTextureReloadCmd ($node+\".fileTextureName\");\n        $count = ++$count;\n    }\n}\nwaitCursor -state off;")
	textureReload;

